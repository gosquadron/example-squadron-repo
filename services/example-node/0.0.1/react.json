[
    {
        "execute":["rebuild"],
        "when": {
            "always": true
        }
    },
    {
        "execute":["install npm deps"],
        "when": {
            "files":["code/package.json"],
            "not_exist":["code/node_modules"]
        }
    },
    {
        "execute":["start"],
        "when": {
            "command":"forever list | grep index.js",
            "exitcode_not": 0
        }
    },
    {
        "execute":["restart"],
        "when": {
            "files":["*"]
        }
    }
]
